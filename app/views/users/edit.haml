- provide(:title, "Edit user")

%h2.small-11.large-6.large-offset-4 Update your profile

.small-11.large-7.large-offset-2
	= form_for(@user) do |f|
		= render 'shared/error_messages', object: f.object
		= f.label :name
		= f.text_field :name
		= f.label :email
		= f.text_field :email
		= f.label :password
		= f.password_field :password
		= f.label :password_confirmation, "Confirm Password"
		= f.password_field :password_confirmation
		= f.submit "Save changes", class: "button small"